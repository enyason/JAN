<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexdev.enyason.jan.LandingActivity">

    <ImageView
        android:id="@+id/image_view_jan_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jan_logo" />


    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_below="@id/image_view_jan_logo"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:text="JAN Offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="15sp"
            android:text="Capacity Building Courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <Button
        android:layout_marginBottom="50dp"
        android:onClick="goToSignUpPage"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:text="Enroll Today"
        android:textAllCaps="false"
        android:layout_height="wrap_content" />


</RelativeLayout>
